@model Harlem.Entity.DbModels.Basket
@{ 
    int i = 0;
}
<div class="w-100 d-flex justify-content-center mb-4 ">
    <div class="d-flex justify-content-between col-8">
        <div style="background-color: white;" class="order-item-list shadow-lg rounded-3 p-4 col-8">
            <div class="card">


                @if (Model != null && Model.BasketItem != null && Model.BasketItem.Count > 0)
                {<div class="card-header d-flex">
                        <div class="col-6">
                            Ürün
                        </div>
                        <div class="col-3">
                            Adet
                        </div>
                        <div class="col-3">
                            Fiyat
                        </div>
                    </div>
                    <div class="card-body ">
                        @foreach (var item in Model.BasketItem)
                        {
                            <div class="basket-item d-flex">
                                <div class="col-6">
                                    @item.Product.Name
                                </div>
                                <div class="col-3">
                                    <div>
                                        @item.Qty
                                    </div>
                                </div>
                                <div class="col-3">
                                    <div>
                                        @(item.Price*item.Qty)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
            <div class="card mt-3">
                <div class="card-header d-flex">
                    <div class="col-6">
                        Adres Bilgisi
                    </div>
                </div>
                <div class="card-body d-flex  flex-wrap">
                    @foreach (Harlem.Entity.DbModels.AccountUserAddress item in ViewBag.UserAddresses.Entity)
                    {
                        i++;
                        <div class="col-5 address-item">
                            <div class="address-title">@item.Name</div>
                            <hr>
                            <div class="address-content">
                                <div>
                                    <input id="address@(i)" type="radio" value=@(i) name="Adress">
                                </div>
                                <label for="address@(i)" class="address-detail">
                                    @item.AddressDetail
                                </label>
                            </div>
                        </div>
                    }


                </div>
            </div>
            <div class="card mt-3">
                <div class="card-header d-flex">
                    <div class="col-6">
                        Ödeme Bilgisi
                    </div>
                </div>
                <div class="card-body d-flex  flex-wrap">
                    <div class="col-3 payment-item">
                        <div>
                            <input id="nakit" type="radio" value=1 name="PaymentType">
                        </div>
                        <label for="nakit" class="payment-detail">
                            Nakit
                        </label>
                    </div>
                    <div class="col-3 payment-item">
                        <div>
                            <input id="kredikarti" type="radio" value=2 name="PaymentType">
                        </div>
                        <label for="kredikarti" class="payment-detail">
                            Kredi Kartı
                        </label>
                    </div>
                    <div class="col-3 payment-item">
                        <div>
                            <input id="kapidaOdeme" type="radio" value=3 name="PaymentType">
                        </div>
                        <label for="kapidaOdeme" class="payment-detail">
                            Kapıda Ödeme
                        </label>
                    </div>


                </div>
            </div>
        </div>
        <div class="summary shadow-lg rounded-3 col-3 p-3"
             style="min-height: 300px; background-color: white; position: relative;">
            <div class="card">
                <div class="card-header d-flex">
                    <h5>Sipariş Özeti</h5>
                </div>
                <div class="card-body d-flex flex-wrap">
                    <div class="col-6">Ürün Toplam :</div>
                    <div class="col-6 fw-bold">@Model.TotalPrice ₺</div>
                    <div class="col-6">Kargo Ücreti :</div>
                    <div class="col-6 fw-bold">11.99 ₺</div>
                    <div class="col-6">KDV Ücreti :</div>
                    <div class="col-6 fw-bold">18%</div>

                </div>
                <hr>
                <div style="padding: 1rem;">Teslim Adresi : <span class="fw-bold"> Ev Adresim </span></div>
                <hr>

                <div style="padding: 1rem;">Ödeme Tipi : <span class="fw-bold"> Nakit </span></div>
                <div class="card-footer d-flex flex-wrap align-items-center">
                    <div class="col-6">Genel Toplam :</div>
                    <div class="col-6 fw-bold color-main " style="font-size: 1.5rem;">@(Model.TotalPrice+12) ₺</div>
                </div>
            </div>
            <div class="p-4 w-100" style="position: absolute; bottom: 10px;left: 0;">
                <button type="button" class="btn btn-primary harlem-btn w-100 background-color-main"href=""\Order\Complete?id=@Model.Id">
                    Sepeti Onayla
                </button>
            </div>
        </div>
    </div>
</div>