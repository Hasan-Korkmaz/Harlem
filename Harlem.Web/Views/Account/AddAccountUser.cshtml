<div class="w-100 d-flex justify-content-center mb-4 " style="height: 450px;">
    <div class="col-8 h-100 shadow rounded-3">
        <div class="card h-100" style="padding:1rem">
            <div class="card-header " >
                <h5>Yeni Kullanıcı İşlemi</h5>

            </div>
            <div class="card-body d-center flex-column" style="text-align:center">
                @if (ViewBag.AccountStatus == true)
                {
                    <img src="~/Images/Gif/Success.gif" width="200" />
                }
                else
                {
                    <img width="200" src="~/Images/Gif/Error.gif" />
                }
                @Html.Raw(ViewBag.AccountStatusMessage)
            </div>
        </div>
    </div></div>